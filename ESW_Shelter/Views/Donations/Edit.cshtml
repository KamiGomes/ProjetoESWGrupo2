@model ESW_Shelter.Models.DonationIndexViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_BackLayout.cshtml";
}

<h2>Editar Donativo</h2>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfDonation" class="control-label"></label>
                <input asp-for="DateOfDonation" class="form-control" />
                <span asp-validation-for="DateOfDonation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsersFK" class="control-label"></label>
                <select class="input-lg" name="UsersFK" id="UsersFK">
                    <option value="0" style="color:#ccc !important;">
                        Por favor seleccione um cliente!
                    </option>   1
                    @foreach (Users item in ViewBag.UsersFK)
                    {
                        if (item.UserID == Model.EditDonation.UsersFK)
                        {
                            <option value="@item.UserID" selected="selected">
                                @item.Name
                            </option>
                        }
                        else
                        {
                            <option value="@item.UserID">
                                @item.Name
                            </option>
                        }
                    }
                </select>
                <span asp-validation-for="EditDonation.UsersFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Products[0].Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Products[0].Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Products[0].AnimalTypeFK)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Products[0].ProductTypeFK)
                            </th>
                            <th>
                                Quantidade
                            </th>
                            <th>
                                Selecionar
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnimaltypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductTypeName)
                                </td>
                                <td>
                                    @if (Model.DonationProducts.Where(e => e.ProductFK == item.ProductID).FirstOrDefault() != null)
                                    {
                                        var donation = Model.DonationProducts.Where(e => e.ProductFK == item.ProductID).FirstOrDefault();

                                        <input name="quantityProduct @item.ProductID" type="number" class="check" value="@donation.Quantity" style="color: black;" />
                                    }
                                    else
                                    {
                                        <input name="quantityProduct @item.ProductID" type="number" class="check" value="" style="color: black;" />
                                    }
                                </td>
                                <td>
                                    @if (Model.DonationProducts.Where(e => e.ProductFK == item.ProductID).FirstOrDefault() != null)
                                    {
                                        <input name="checkProduct" type="checkbox" class="check" value="@item.ProductID" checked />
                                    }
                                    else
                                    {
                                        <input name="checkProduct" type="checkbox" class="check" value="@item.ProductID" />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>